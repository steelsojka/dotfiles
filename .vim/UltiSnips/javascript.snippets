global !p
from snippet_helpers import *
endglobal

snippet method "Add a class method" b
/**
 * ${3:description}
 *`!p jsdocArguments(t[2], snip)`
 * @return {*} Return value
 */
${1:methodName}(${2:arguments}) {
}

endsnippet

snippet func "Add a function" b
/**
 * ${3:description}
 *`!p jsdocArguments(t[2], snip)`
 * @return {*} Return value
 */
function ${1:methodName}(${2:arguments}) {
}
endsnippet

snippet class "Create a class" b
/**
 * ${3:description}
 *`!p jsdocArguments(t[2], snip)`
 * @return {*} Return value
 */
class ${1:className} {
  constructor(${2:arguments}) {
  }
}
endsnippet

snippet jsdoc "Document a class function" "re.match('\s*(?:async|\*)?\s?[a-zA-Z]+\((.*)\)\s*\{', snip.buffer[snip.line + 1])" be
/**
 * ${1:description}
 * `!p jsdocArguments(snip.context.group(1), snip)`
 * @return {*} ${2:returnValue}
 */
endsnippet

snippet jsdoc "Document a function" "re.match('\s*(?:async|\*)?\s?function\s*[a-zA-Z]*\((.*)\)\s*\{', snip.buffer[snip.line + 1])" be
/**
 * ${1:description}
 * `!p jsdocArguments(snip.context.group(1), snip)`
 * @return {*} ${2:returnValue}
 */
endsnippet
